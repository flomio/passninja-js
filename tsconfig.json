{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": false,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015"],
    "typeRoots": ["./dist", "./node_modules/@types"],
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
