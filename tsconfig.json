{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": false,
    "declaration": false,
    "removeComments": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "typings"],
  "include": ["src"]
}
